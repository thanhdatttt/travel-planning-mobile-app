generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// enum types
enum authProvider {
  local
  facebook
  google
}

enum userRole {
  user
  admin
  moderator
}

enum otpType {
  register
  reset
}

// models
model User {
  id            String @id @default(uuid())
  email         String @unique
  username      String @unique

  fullName      String?
  phone         String?
  address       String?
  avatarUrl     String?
  bio           String?
  preference    Json?

  role          userRole @default(user)

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  authProviders AuthProvider[]
  sessions Session[]
}

model AuthProvider {
  id            String       @id @default(uuid())
  userId        String

  provider      authProvider @default(local)
  providerId    String
  hashPassword  String?

  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerId])
  @@unique([userId, provider])
}

model Session {
  id        String   @id @default(uuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String   
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model EmailOTP {
  id        String   @id @default(uuid())
  email     String
  otp       String
  type      otpType  @default(register)
  verified  Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
  @@index([expiresAt])
}